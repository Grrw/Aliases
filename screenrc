
# Change escape char to M-a
escape ^Aa
register S ^A
bindkey "^[a" process S

# vim movement
bind j focus down
bind k focus up
bind l focus right
bind h focus left

# resize hotkeys
bind o resize -h +4
bind y resize -h -4
bind i resize -v +4
bind u resize -v -4

shelltitle "$ |bash"

# makes a new status and highlights current window
hardstatus alwayslastline '%m/%d %02c:%s %?%E%{= .Y}%:%{= .g}%?%H%{-} %L=%-w%45L>%{= g.}%n %t%{-}%+w %-17<%=%{= .y}(%l)'

startup_message off

defmousetrack on

screen -t Code 0 ranger

